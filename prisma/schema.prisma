datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ContactSubmission {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  company   String?    // NEW
  phone     String?    // NEW
  service   String?    // NEW
  createdAt DateTime @default(now())
}


